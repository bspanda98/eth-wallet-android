<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wallet_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet Name"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/wallet_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Change Wallet Name"
                android:visibility="gone" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/wallet_address_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wallet_balance_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Wallet Name"
            android:textSize="20sp" />

        <Button
            android:id="@+id/request_eth"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:text="Request Free Ether (Ropsten)" />


    </LinearLayout>
</RelativeLayout>